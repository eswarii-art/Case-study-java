class Task extends Thread {
    String name;
    Task(String name) {
        this.name = name;
    }
    public void run() {
        for (int i = 1; i <= 3; i++) {
            System.out.println(name + " is running");
        }
    }
    public static void main(String[] args) {
        Task t1 = new Task("Thread A");
        Task t2 = new Task("Thread B");
        Task t3 = new Task("Thread C");
        t1.start();
        t2.start();
        t3.start();
    }
}
