class CharCount {
    public static void main(String[] args) {
        String text = "programming";
        char ch = 'g';
        int count = 0;
        for (int i = 0; i < text.length(); i++) {
            if (text.charAt(i) == ch)
                count++;
        }
        System.out.println("Character '" + ch + "' occurs " + count + " times");
    }
}
